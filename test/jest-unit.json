{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testMatch": ["**/test/unit/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "maxWorkers": "50%",
  "cache": true,
  "cacheDirectory": ".jest-cache",
  "clearMocks": true,
  "resetMocks": false,
  "restoreMocks": false
}

