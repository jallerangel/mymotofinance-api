generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//////////////////////
// ENUMS
//////////////////////

enum ExpenseCategory {
  GASOLINE
  FOOD
  MAINTENANCE
  TOLL
  OTHER
}

enum IncomeSource {
  MANUAL
  UBER
  DIDI
  INDRIVER
  PICAP
}

enum PaymentMethod {
  CASH
  NEQUI
  DAVIPLATA
  BANCOLOMBIA
  OTHER
}

enum RideSesionStatus {
  ACTIVE
  COMPLETED
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum GoalPriority {
  LOW
  MEDIUM
  HIGH
}

//////////////////////
// MODELS
//////////////////////

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   
  name      String?
  createdAt DateTime @default(now())

  rideSesion RideSesion[]
  expenses   Expense[]
  incomes    Income[]
  goals      Goal[]
}

model RideSesion {
  id        String      @id @default(uuid())
  userId    String
  status    RideSesionStatus @default(ACTIVE)
  startedAt DateTime    @default(now())
  endedAt   DateTime?
  
  initialOdometer Int?
  finalOdometer   Int?

  createdAt DateTime    @default(now())

  user     User      @relation(fields: [userId], references: [id])
  incomes  Income[]
  expenses Expense[]
}

model Income {
  id          String        @id @default(uuid())
  userId      String
  rideSesionId String?
  
  source        IncomeSource  
  paymentMethod PaymentMethod 
  
  status      TransactionStatus @default(CONFIRMED) 
  
  amount      Int
  occurredAt  DateTime      @default(now())
  createdAt   DateTime      @default(now())

  user      User       @relation(fields: [userId], references: [id])
  rideSesion RideSesion? @relation(fields: [rideSesionId], references: [id])
}

model Expense {
  id          String          @id @default(uuid())
  userId      String
  rideSesionId String?
  category    ExpenseCategory
  paymentMethod PaymentMethod?
  
  description   String?
  amount        Int
  isOperational Boolean         @default(true)
  occurredAt    DateTime        @default(now())
  createdAt     DateTime        @default(now())

  user      User       @relation(fields: [userId], references: [id])
  rideSesion RideSesion? @relation(fields: [rideSesionId], references: [id])
}

model Goal {
  id        String       @id @default(uuid())
  userId    String
  title     String
  target    Int
  priority  GoalPriority
  dueDate   DateTime
  createdAt DateTime     @default(now())

  user User @relation(fields: [userId], references: [id])
}